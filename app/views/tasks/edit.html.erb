<h2>Edit task</h2>

<%= form_with model: @tasks do |t| %>
  <%= t.label :name %>
  <%= t.text_field :name %>

  <%= t.label :details %>
  <%= t.text_field :details %>

  <%= t.label :completed, "Completed?" %>
  <%= t.check_box :completed, {}, "true", "false" %>

  <%= t.submit "Create Task" %>
<% end %>
